<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_escudo"
        android:layout_width="95dp"
        android:layout_height="91dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Nombre: "
        app:layout_constraintStart_toEndOf="@+id/item_escudo"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_apodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Apodo: "
        app:layout_constraintStart_toEndOf="@+id/item_escudo"
        app:layout_constraintTop_toBottomOf="@+id/item_nombre" />

    <TextView
        android:id="@+id/item_estadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Estadio: "
        app:layout_constraintStart_toEndOf="@+id/item_escudo"
        app:layout_constraintTop_toBottomOf="@+id/item_apodo" />

    <ImageView
        android:id="@+id/item_bandera"
        android:layout_width="64dp"
        android:layout_height="43dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/item_apodo"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>